<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="2">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:src="@drawable/backgroundsjw2" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/sumsel"
    />

    <ImageButton
        android:id="@+id/gambar1"
        android:onClick="OpenActivity"
        android:layout_width="150dp"
        android:layout_height="130dp"
        android:background="@android:color/transparent"
        android:layout_centerInParent="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="40dp"
        android:src="@drawable/palembang"
        android:scaleType="fitCenter"
        android:padding="15dp" />

    <ImageButton
        android:id="@+id/gambar2"
        android:layout_width="150dp"
        android:layout_height="130dp"
        android:background="@android:color/transparent"
        android:layout_centerInParent="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="40dp"
        android:src="@drawable/lahat"
        android:padding="15dp"
        android:scaleType="fitCenter" />

    <ImageButton
        android:id="@+id/gambar3"
        android:layout_width="150dp"
        android:layout_height="125dp"
        android:background="@android:color/transparent"
        android:layout_centerInParent="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="40dp"
        android:layout_marginBottom="120dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/pagaralam"
        android:scaleType="fitCenter"
        android:padding="15dp"/>

    <ImageButton
        android:id="@+id/gambar4"
        android:layout_width="150dp"
        android:layout_height="125dp"
        android:background="@android:color/transparent"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="120dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/lubuklinggau"
        android:scaleType="fitCenter"
        android:padding="15dp"/>

    <ImageButton
        android:id="@+id/wonderful"
        android:layout_width="140dp"
        android:layout_height="110dp"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="20dp"
        android:scaleType="fitCenter"
        android:background="@android:color/transparent"
        android:src="@drawable/wonderfullindo" />

</RelativeLayout>